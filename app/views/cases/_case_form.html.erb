<%= form_for @case do |f| %>
 <%= f.label :title %>
 <%= f.text_field :title %>
 <%= f.label :case_type %>
 <%= f.text_field :case_type %>
 <%= f.label :status %>
 <%= f.text_field :status %>
 <%= f.hidden_field :client_id, value: get_current_user.client.id %>

 <%= f.collection_select(:lawyer_id, Lawyer.all, :id, :name, {:prompt => "Select your Lawyer"}) %>

 <%= f.submit %>
<% end %>
