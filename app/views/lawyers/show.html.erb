<h1><%= @lawyer.name%> Profile</h1>


<strong>
  <ul>
    <li>Name: <%= @lawyer.name %></li>
    <li>Email: <%= @lawyer.email %></li>
    <li>Phone: <%= @lawyer.phone %></li>
    <li>Address: <%= @lawyer.address %></li>
    <li>Fee: <%= @lawyer.attorney_fee %></li>
  </ul>
</strong>

<strong>Cases:</strong>
<ol>
  <% @lawyer.cases.each do |obj| %>
  <li><%= obj.title %></li>
  <% end %>
</ol>


<%= form_tag lawyer_path(@lawyer.id), method: "DELETE" do %>
  <%= submit_tag "Delete #{@lawyer.name}" %>
  <% end %>
<%= link_to "Edit", edit_lawyer_path %>
