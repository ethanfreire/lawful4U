<br><br><br><br><br><br>
<h1>Login or <%= link_to "Sign Up", new_user_path %></h1>

<div class="error">
    <%= flash.notice %>
</div>

<div class="form-box">
    <h3>
        <%= form_for "/login" do |f| %>
            <%= f.label :username %>
            <%= f.text_field :username %><br><br>

            <%= f.label :password %>
            <%= f.password_field :password %><br><br> 

            <%= f.submit "Log in" %>
        <% end %>
    </h3>
</div>
