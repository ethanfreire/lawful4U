<h1>Login or <%= link_to "Sign Up", new_user_path %></h1>

<div class="error">
    <%= flash.notice %>
</div>

<strong>
    <%= form_for "/login" do %>
        <%= label :email, "Email:" %>
        <%= text_field_tag :email %>

